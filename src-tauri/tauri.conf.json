{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "BlueHub",
  "version": "0.1.0",
  "identifier": "com.optb-bluehub.app",
  "build": {
    "frontendDist": "https://optionallybluestudios.github.io/BlueHub",
    "devUrl": "https://optionallybluestudios.github.io/BlueHubDev"
  },
  "app": {
    "windows": [
      {
        "title": "BlueHub",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
